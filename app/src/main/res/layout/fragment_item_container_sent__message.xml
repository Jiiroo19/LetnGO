<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_container_sent__message">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/senderMsg"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/senderPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/accdisplay" />

            <TextView
                android:id="@+id/messageTimeDelivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="50dp"
                android:paddingStart="20dp"
                android:text="01-01-2022 12:00 am"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/sentMsg"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_search"
                android:backgroundTint="#dadada"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:text="Good Morning ... "
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>