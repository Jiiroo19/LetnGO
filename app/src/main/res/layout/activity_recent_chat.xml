<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAF4">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        //owner message

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/message_bacoChat"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_baco"
                android:padding="20dp"
                android:paddingBottom="10dp"
                android:text="Good Morning ... "
                android:textColor="#424242" />

            <TextView
                android:id="@+id/message_bacoTime"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="01-01-2022 12:00 am"/>

        </LinearLayout>

        //User message
        //layout_marginTop ay not include. margin top is for presentation only
        //the back_end required to not include the marginTop
        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:id="@+id/my_message_Chat"
            android:layout_marginStart="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <TextView
                android:background="@drawable/my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can I book now ??"
                android:textColor="#424242"
                android:paddingBottom="10dp"
                android:padding="20dp"
                />
            <TextView
                android:layout_gravity="end"
                android:id="@+id/my_message_Time"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="01-01-2022 1:00 pm"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>