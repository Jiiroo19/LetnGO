<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".FragmentNewsfeed"
        android:background="#DEE1DD">

        <RelativeLayout
            android:id="@+id/newsfeedRes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dadada"
                android:padding="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:text="@string/newsfeed"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </TextView>

                <ImageView
                    android:id="@+id/imageMessage"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/message1"
                    app:layout_constraintBottom_toBottomOf="@id/textWelcome"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textWelcome"
                    app:layout_constraintVertical_bias="0.0"
                    app:tint="@color/colorWhite" />

                <LinearLayout

                    android:id="@+id/linearLayout"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/createpost"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_46sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_38sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@drawable/tab_rect"
                        android:bottomLeftRadius="@dimen/_4sdp"
                        android:drawableStart="@drawable/user"
                        android:hint="    What's on your mind?"
                        android:inputType="text"
                        android:paddingStart="@dimen/_17sdp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textColorHint="#999999"
                        tools:ignore="RtlSymmetry,TextViewEdits" />

                    <RelativeLayout
                        android:layout_width="@dimen/_292sdp"
                        android:layout_height="@dimen/_600sdp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>




