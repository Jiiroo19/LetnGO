<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messages">



    //listview


    <androidx.cardview.widget.CardView
        android:layout_width="389dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="835dp"
            android:background="#DDDDDD"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="M E S S A G E S"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            // isa lang ang kayang ilagay, back end po ang bahala dyna hahaha
            // may source code po send ko if ever na gagawan ng back end
            //

            <LinearLayout
                android:id="@+id/chat"
                android:layout_width="375dp"
                android:layout_height="82dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="#dddddd"
                android:clickable="true"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_1"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/user"
                    app:civ_border_color="#658B6F"
                    app:civ_border_width="2dp" />


                <LinearLayout
                    android:id="@+id/user_name"
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/shape_item"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/latest_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Support Team"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="sans-serif"
                        android:text="Hello! I am Let n Go Support Team"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>